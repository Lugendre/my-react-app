{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "types": ["node", "jest"],
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"]
    }
  }
}
